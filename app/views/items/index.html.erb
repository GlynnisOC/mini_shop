<% @items.each do |item| %>
  <img src="<%= item.image %>" width="200px">
  <p>Name: <%= item.name %></p>
  <p>Description: <%= item.description %></p>
  <p>Price: <%= item.price %></p>
  <p>Status: <%= item.active %></p>
  <p>Quantity: <%= item.inventory %></p>
  <p>Merchant Name: <%= item.merchant_name %></p>
<% end %>

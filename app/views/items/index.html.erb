<% if @merchant != nil %>
  <%= link_to "Add New Item", "/merchants/#{@merchant.id}/items/new" %>
  <% @merchant.items.each do |item| %>
    <img src="<%= item.image %>" width="200px"></img>
    <p>Name: <%= link_to item.name, "/items/#{item.id}" %></p>
    <p>Price: <%= item.price %></p>
    <p>Status: <%= item.active %></p>
    <p>Quantity: <%= item.inventory %></p>
  <% end %>
<% else %>
  <% @items.each do |item| %>
    <img src="<%= item.image %>" width="200px"></img>
    <p>Name: <%= link_to item.name, "/items/#{item.id}" %></p>
    <p>Description: <%= item.description %></p>
    <p>Price: <%= item.price %></p>
    <p>Status: <%= item.active %></p>
    <p>Quantity: <%= item.inventory %></p>
    <p>Merchant Name: <%= link_to item.merchant_name, "/merchants/#{item.merchant_id}" %></p>
    <% end %>
<% end %>
